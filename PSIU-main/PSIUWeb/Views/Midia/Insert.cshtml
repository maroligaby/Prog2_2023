@model Midia

<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-6">
                <h1 class="m-0">
                    CADASTRO: <small>Midia</small>
                </h1>
            </div>
            <div class="col-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-action="Index"
                           asp-controller="Midia">
                            Listagem
                        </a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="container">
    <div class="row">
        <form asp-action="Insert" style="width:100%;">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" />

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Url" class="control-label"></label>
                        <input asp-for="Url" class="form-control"
                               placeholder="URL da mídia" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="TypeMidia" class="control-label"></label>
                        <select asp-for="TypeMidia"
                                asp-items="Html.GetEnumSelectList<TypeMidia>()"
                                class="form-control">
                            <option selected="selected"
                                    value="">
                                Selecione o tipo de mídia
                            </option>
                        </select>
                    </div>
                </div>
            </div>



            <hr />

            <div class="form-group">
                <input type="submit" value="Atualizar"
                       class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>